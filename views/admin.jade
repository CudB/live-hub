extend layout

block content
  .adminPageHeader
    h1 Admin Page
    hr
  .div
    button.adminButtons(id="startVideosBtn") Start Videos
  .div
    button.adminButtons(id="resetMessagesBtn") Reset Messages
  .div
    button.adminButtons(id="resetSkipVotesBtn") Reset Skip Votes

block sidebar

block scripts
  script(src='https://cdn.firebase.com/js/client/2.2.1/firebase.js')
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.9.0/jquery.min.js')
  script.
    var fb = new Firebase('https://flickering-inferno-2389.firebaseio.com/');

    var resetMessages = $('#resetMessagesBtn');
    var resetSkipVotes = $('#resetSkipVotesBtn');
    var startVideos = $('#startVideosBtn');

    startVideos.click(function() {
      fb.set({
        startVideos: 1
      });
      setTimeout(function() {
        fb.set({
          startVideos: 0
        });
      }, 2000);
      
    });

    resetMessages.click(function() {
      fb.child('messages').remove(); 
    });

    resetSkipVotes.click(function() {
      fb.child('skipCounter').remove(); 
    });